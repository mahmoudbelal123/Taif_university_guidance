<LinearLayout
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <org.angmarch.views.NiceSpinner
        android:hint="Select College"
        android:layout_gravity="center"
        android:id="@+id/nice_spinner_select_college_for_plans"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_margin="10dp"/>

    <org.angmarch.views.NiceSpinner
        android:hint="Select Department"
        android:layout_gravity="center"
        android:id="@+id/nice_spinner_select_department_for_plans"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_margin="10dp"/>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <Button
        android:layout_weight="1"
        android:hint="Select to add new study plan"
        android:layout_gravity="center"
        android:id="@+id/button_add_study_plan_getAll"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_margin="16dp"/>
        <Button
            android:layout_weight="1"
            android:hint="get all study plans"
            android:layout_gravity="center"
            android:id="@+id/button_get_study_plan_getAll"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_margin="16dp"/>

    </LinearLayout>


    <ListView
        android:layout_marginTop="10dp"
        android:id="@+id/listView_display_all_plans"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>
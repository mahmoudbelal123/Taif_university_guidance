<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentTop="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:layout_gravity="center"
    android:layout_margin="20dp"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/text_name_of_college_plan"
            android:layout_marginBottom="40dp"
            android:gravity="center"
            android:textColor="@color/colorRed"
            android:textStyle="bold"
            android:text="Name of College"
            android:textSize="15sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/text_name_of_department_plan"
            android:layout_marginBottom="40dp"
            android:gravity="center"
            android:textColor="@color/colorRed"
            android:textStyle="bold"
            android:text="Name of department"
            android:textSize="15sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_layout_userName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/edit_name_study_plan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="study plan name" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_layout_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/edit_description_plan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="description study plan" />

        </android.support.design.widget.TextInputLayout>


        <Button
            android:textColor="@color/colorWhite"
            android:textStyle="bold"
            android:textSize="17dp"
            android:background="@drawable/button_style"
            android:layout_margin="20dp"
            android:layout_gravity="center"
            android:id="@+id/button_add_plan_add"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="Fill all data of study plan"
            />

        <ProgressBar
            android:visibility="invisible"
            android:id="@+id/progress_sign_up"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

</ScrollView>

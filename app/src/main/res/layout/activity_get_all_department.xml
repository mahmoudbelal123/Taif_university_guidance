<LinearLayout
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <org.angmarch.views.NiceSpinner
        android:hint="Select College"
        android:layout_gravity="center"
        android:id="@+id/nice_spinner_select_college_for_department"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_margin="16dp"/>

    <Button
        android:hint="Select College to add new Department"
        android:layout_gravity="center"
        android:id="@+id/button_add_department"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_margin="16dp"/>


    <ListView
        android:layout_marginTop="10dp"
        android:id="@+id/listView_display_all_departments"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>
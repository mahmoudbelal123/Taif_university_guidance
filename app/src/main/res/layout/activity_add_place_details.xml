<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentTop="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:layout_margin="10dp"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >


        <android.support.design.widget.TextInputLayout
        android:id="@+id/input_layout_userName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/edit_name_place"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="place name" />

    </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_layout_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/edit_place_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="details" />

        </android.support.design.widget.TextInputLayout>

<LinearLayout
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="200dp">

        <ImageView
            android:layout_gravity="center"

            android:textColor="@color/colorWhite"
            android:textStyle="bold"
            android:textSize="17dp"
            android:background="@drawable/button_style"
            android:layout_margin="20dp"
            android:id="@+id/imageView_upload_place_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="place Image"
            />
    <ImageView
        android:layout_gravity="center"

        android:textColor="@color/colorWhite"
        android:textStyle="bold"
        android:textSize="17dp"
        android:background="@drawable/button_style"
        android:layout_margin="20dp"
        android:id="@+id/imageView_upload_level_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="Level Image"
        />


</LinearLayout>


        <android.support.design.widget.TextInputLayout
            android:layout_margin="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/edit_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="select place location" />

        </android.support.design.widget.TextInputLayout>


        <Button
            android:id="@+id/button_add_place"
            android:text="add Place"
            android:paddingBottom="10dp"
            android:layout_marginBottom="10dp"
            android:layout_margin="10dp"
            android:layout_gravity="center"
            android:layout_width="300dp"
            android:layout_height="wrap_content" />
    </LinearLayout>

</ScrollView>
